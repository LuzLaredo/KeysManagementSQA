@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Universidad del Valle</title>
    <link rel="stylesheet" href="~/css/login.css" />
</head>
<body>
    <div class="login-container">
        <!-- Sección del Logo -->
        <div class="logo-section">
            <img src="~/images/Logo.jpg" alt="Universidad del Valle - Bolivia" class="university-logo-img">
        </div>
        <!-- Sección del Formulario -->
        <div class="form-section">
            <div class="login-form">
                <h2 class="form-title">INICIAR SESIÓN</h2>

                <form method="post" id="loginForm">
                    <div class="input-group">
                        <input type="email" name="email" class="input-field" placeholder="Usuario:" required>
                        <div class="input-icon">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                                <circle cx="12" cy="7" r="4"></circle>
                            </svg>
                        </div>
                    </div>

                    <div class="input-group">
                        <input type="password" name="pin" class="input-field" placeholder="Contraseña:" required>
                        <div class="input-icon">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                                <circle cx="12" cy="16" r="1"></circle>
                                <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                            </svg>
                        </div>
                    </div>

                    <button type="submit" class="login-button">
                        <span>INICIAR SESIÓN</span>
                        <div class="button-overlay"></div>
                    </button>
                </form>

                @if (ViewBag.Mensaje != null)
                {
                    <div class="error-message">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <circle cx="12" cy="12" r="10"></circle>
                            <line x1="15" y1="9" x2="9" y2="15"></line>
                            <line x1="9" y1="9" x2="15" y2="15"></line>
                        </svg>
                        <span>@ViewBag.Mensaje</span>
                    </div>
                }

                <div class="form-footer">
                    <a href="/Login/RecuperarPassword" class="forgot-password">¿Olvidaste tu contraseña?</a>
                </div>

            </div>
        </div>
    </div>

   
</body>
</html>