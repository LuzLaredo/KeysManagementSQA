@{
    ViewBag.Title = "Cambiar Contraseña";
}

<h2>Cambiar Contraseña - Primera vez</h2>

<form method="post" asp-action="CambiarPasswordPrimeraVez">
    <input type="hidden" name="email" value="@ViewBag.Email" />

    <div>
        <label>Contraseña actual:</label>
        <input type="password" name="contraseñaActual" required />
    </div>

    <div>
        <label>Nueva contraseña:</label>
        <input type="password" name="nuevaPassword" required />
    </div>

    <div>
        <label>Confirmar nueva contraseña:</label>
        <input type="password" name="confirmarPassword" required />
    </div>

    <button type="submit">Cambiar Contraseña</button>
</form>

@if (ViewBag.Mensaje != null)
{
    <p style="color:red">@ViewBag.Mensaje</p>
}
