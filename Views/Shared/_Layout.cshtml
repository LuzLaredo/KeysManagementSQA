<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema_Gestion_Llaves</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Sistema_Gestion_Llaves.styles.css" asp-append-version="true" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
</head>
<body>
    <div class="d-flex" style="min-height: 100vh;">

        <!-- Sidebar -->
        <div class="bg-danger d-flex flex-column p-4" style="width: 250px; background-color:#80002a !important;">
            <div class="text-center mb-4">
                <img src="~/images/univalle_logo.png" alt="Univalle" style="width:120px; height:auto;" />
            </div>
            <ul class="nav flex-column text-white fw-bold">
                <li class="nav-item mb-3">
                    <a class="nav-link text-white" asp-controller="AdminDashboard" asp-action="Index">
                        <i class="bi bi-speedometer2 me-2"></i> Dashboard
                    </a>
                </li>
                <li class="nav-item mb-3">
                    <a class="nav-link text-white" asp-controller="AdminDashboard" asp-action="VerUsuarios">
                        <i class="bi bi-person-plus-fill me-2"></i> Registrar
                    </a>
                </li>
                <li class="nav-item mb-3">
                    <a class="nav-link text-white" asp-controller="AdminDashboard" asp-action="VerDocentes">
                        <i class="bi bi-people-fill me-2"></i> Docentes
                    </a>
                </li>
                <li class="nav-item mb-3">
                    <a class="nav-link text-white" href="#">
                        <i class="bi bi-journal-text me-2"></i> Reportes
                    </a>
                </li>
                <li class="nav-item mt-auto">
                    <a class="nav-link text-white" asp-controller="Login" asp-action="Logout">
                        <i class="bi bi-box-arrow-right me-2"></i> Cerrar sesión
                    </a>
                </li>
            </ul>
        </div>

        <!-- Main Content -->
        <div class="flex-grow-1 p-4" style="background-color:#f3f3f3;">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
